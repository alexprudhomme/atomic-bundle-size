{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "groupName": "Coveo",
      "groupSlug": "Coveo",
      "matchPackagePatterns": ["@coveo/headless", "@coveo/atomic"],
      "lockFileMaintenance": {
        "enabled": false
      }
    },
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "lockFileMaintenance": {
        "enabled": false
      },
      "matchPackageNames": ["*"]
    }
  ],
  "schedule": ["before 4am on Monday"]
}
